<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 레이어 1: 그림자 역할 (아래에 깔리는 도형) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" /> <!-- 반투명 검은색 (그림자 색) -->
            <corners android:radius="100dp" />
        </shape>
    </item>

    <!-- 레이어 2: 실제 내용 (위에 올라가는 도형) -->
    <!-- bottom, right 값을 주어 그림자 레이어보다 약간 위로 올라온 것처럼 보이게 합니다. -->
    <item android:bottom="2dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 흰색 배경 -->
            <corners android:radius="100dp" />
        </shape>
    </item>

</layer-list>
